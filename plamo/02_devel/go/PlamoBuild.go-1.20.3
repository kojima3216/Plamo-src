#!/bin/sh
##############################################################
pkgbase='go'
vers="1.20.3"
url="https://dl.google.com/go/go${vers}.src.tar.gz"
digest="sha256sum:e447b498cde50215c4f7619e5124b0fc4e25fb5d16ea47271c47f278e7aa763a"
verify=""
arch=`uname -m`
build=B1
src="go"
OPT_CONFIG=""
DOCS="AUTHORS  CONTRIBUTING.md  CONTRIBUTORS  LICENSE  PATENTS  README.md  SECURITY.md  VERSION"
patchfiles=''
compress=tzst
##############################################################

export NO_STRIP=1

source /usr/share/plamobuild_functions.sh

# このスクリプトで使う1文字変数の意味
#
# $W : このスクリプトを動かすカレントディレクトリ
# $S : ソースコードのあるディレクトリ(デフォルト: $W/${src})
# $B : ビルド用ディレクトリ(デフォルト: /tmp/build{,32})
# $P : ビルドしたファイルをインストールするディレクトリ（デフォルト: $W/work)

export GOOS=linux
case "$arch" in
    x86_64) export GOARCH=amd64 ;;
esac
export GOROOT_FINAL=/usr/${libdir}/go
export GOROOT_BOOTSTRAP=/usr/${libdir}/go

if [ $# -eq 0 ] ; then
  opt_download=0 ; opt_config=1 ; opt_build=1 ; opt_package=1
else
  opt_download=0 ; opt_config=0 ; opt_build=0 ; opt_package=0
  for i in $@ ; do
    case $i in
    download) opt_download=1 ;;
    config) opt_config=1 ;;
    build) opt_build=1 ;;
    package) opt_package=1 ;;
    esac
  done
fi
if [ $opt_download -eq 1 ] ; then
  download_sources
fi

if [ $opt_config -eq 1 ] ; then
  if [ -d $B ] ; then rm -rf $B ; fi ; cp -a $S $B
######################################################################
#  don't copy sources, so need patch in the src dir
######################################################################
  cd $B
  for patch in $patchfiles ; do
    patch -p1 < $W/$patch
  done
fi
    
if [ $opt_build -eq 1 ] ; then
  export GOPATH=$B
  export GOROOT=$B
  export GOBIN=$GOROOT/bin

  cd $B/src
  ./make.bash --no-clean -v

  PATH="$GOBIN:$PATH" go install -v -buildmode=shared std
  PATH="$GOBIN:$PATH" go install -v -race std
fi

if [ $opt_package -eq 1 ] ; then
  check_root
  if [ -d $P ] ; then rm -rf $P ; fi ; mkdir -p $P
  cd $B
  install -dm755 -v $P/usr/bin $P/usr/${libdir}/go $docdir/go-${vers}
  cp -av bin pkg src lib misc $P/usr/${libdir}/go/
  cp -r doc/* $docdir/go-${vers}

  ln -sfv /usr/${libdir}/go/bin/go $P/usr/bin/go
  ln -sfv /usr/${libdir}/go/bin/gofmt $P/usr/bin/gofmt
  ln -sfv /usr/share/doc/go-${vers} $P/usr/lib/go/doc

  rm -rfv $P/usr/lib/go/pkg/bootstrap
  rm -rfv $P/usr/lib/go/pkg/tool/*/api

################################
#      install tweaks
#  strip binaries, delete locale except ja, compress man, 
#  install docs and patches, compress them and  chown root.root
################################
  install_tweak

#############################
#   convert symlink to null file and 
#   add "ln -sf" command into install/doinst.sh
################################
  convert_links

  cd $P
  /sbin/makepkg ../$pkg.$compress <<EOF
y
1
EOF

fi
