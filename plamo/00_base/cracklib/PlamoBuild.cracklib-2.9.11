#!/bin/sh
##############################################################
pkgbase='cracklib'
vers='2.9.11'
url="https://github.com/cracklib/cracklib/releases/download/v${vers}/cracklib-${vers}.tar.xz"
digest="md5sum:a6dfb1766aab43a54e1cbd78abf0a20a"
w_url="https://github.com/cracklib/cracklib/releases/download/v${vers}/cracklib-words-${vers}.xz"
arch=`uname -m`
build=B1
src="${pkgbase}-${vers}"
OPT_CONFIG='--disable-static --without-python --with-default-dict=/lib/cracklib/pw_dict'
DOCS='ABOUT-NLS AUTHORS COPYING.LIB ChangeLog INSTALL NEWS README README-DAWG README-LICENSE README-WORDS'
#patchfiles='cracklib-2.8.15-heimdal-1.patch'
compress=tzst
##############################################################

source /usr/share/plamobuild_functions.sh

# このスクリプトで使う1文字変数の意味
# 
# $W : このスクリプトを動かすカレントディレクトリ
# $S : ソースコードのあるディレクトリ(デフォルト: $W/${src})
# $B : ビルド用ディレクトリ(デフォルト: /tmp/build{,32})
# $P : ビルドしたファイルをインストールするディレクトリ（デフォルト: $W/work)


if [ $# -eq 0 ] ; then
  opt_download=0 ; opt_config=1 ; opt_build=1 ; opt_package=1
else
  opt_download=0 ; opt_config=0 ; opt_build=0 ; opt_package=0
  for i in $@ ; do
    case $i in
    download) opt_download=1 ;;
    config) opt_config=1 ;;
    build) opt_build=1 ;;
    package) opt_package=1 ;;
    esac
  done
fi
if [ $opt_download -eq 1 ] ; then
    download_sources
    if [ ! -f ${w_url##*/} ]; then
	wget $w_url
    fi
fi

if [ $opt_config -eq 1 ] ; then
    if [ -d $B ] ; then rm -rf $B ; fi ; mkdir -p $B 
######################################################################
#  don't copy sources, so need patch in the src dir
######################################################################
    cd $S
    for patch in $patchfiles ; do
        if [ ! -f .${patch} ]; then
            patch -p1 < $W/$patch
            sed -i '/skipping/d' util/packer.c
            touch .${patch}
        fi
    done

    cd $B
    # if [ -f $S/autogen.sh ] ; then
    #   sh ./autogen.sh
    # fi
    export PKG_CONFIG_PATH=/usr/${libdir}/pkgconfig:/usr/share/pkgconfig:/opt/kde/${libdir}/pkgconfig
    export LDFLAGS='-Wl,--as-needed' 
    $S/configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var --mandir='${prefix}'/share/man ${OPT_CONFIG[$i]}
    
    if [ $? != 0 ]; then
	echo "configure error. $0 script stop"
	exit 255
    fi
fi
    
if [ $opt_build -eq 1 ] ; then
    cd $B
    export LDFLAGS='-Wl,--as-needed'
    make -j3
    if [ $? != 0 ]; then
	echo "build error. $0 script stop"
	exit 255
    fi
fi

if [ $opt_package -eq 1 ] ; then
  check_root
  if [ -d $P ] ; then rm -rf $P ; fi ; mkdir -p $P
  cd $B
  export LDFLAGS='-Wl,--as-needed'
  make install DESTDIR=$P

  install -dm755 -v $P/$libdir
  mv -v $P/usr/$libdir/libcrack.so.* $P/$libdir
  ln -sfv ../../$libdir/$(readlink $P/usr/lib/libcrack.so) $P/usr/lib/libcrack.so

  # dict
  install -Dm644 -v $W/${w_url##*/} $P/usr/share/dict/cracklib-words.xz
  unxz -v $P/usr/share/dict/cracklib-words.xz
  ln -sfv cracklib-words $P/usr/share/dict/words


  install -v -m755 -d $P/$libdir/cracklib

  install -d -v $P/install
  cat <<EOF >> $P/install/initpkg
echo \$(hostname) >> /usr/share/dict/cracklib-extra-words
PATH="/bin:/usr/bin:/usr/sbin:/sbin" create-cracklib-dict /usr/share/dict/cracklib-words /usr/share/dict/cracklib-extra-words
EOF

################################
#      install tweaks
#  strip binaries, delete locale except ja, compress man, 
#  install docs and patches, compress them and  chown root.root
################################
  install_tweak

#############################
#   convert symlink to null file and 
#   add "ln -sf" command into install/doinst.sh
################################
  convert_links

  cd $P
  /sbin/makepkg ../$pkg.$compress <<EOF
y
1
EOF

fi
