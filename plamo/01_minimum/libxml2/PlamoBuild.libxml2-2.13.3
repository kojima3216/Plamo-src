#!/bin/sh
##############################################################
pkgbase='libxml2'
vers='2.13.2'
url="https://download.gnome.org/sources/libxml2/${vers%.*}/libxml2-${vers}.tar.xz"
digest="md5sum:aeb92dc58cea91c95a10751327193a11"
arch=`uname -m`
build=B1
src="${pkgbase}-${vers}"
OPT_CONFIG="--disable-static --sysconfdir=/etc --with-history --with-threads --without-icu --with-python --with-legacy --with-ftp --docdir=/usr/share/doc/${src}"
DOCS='AUTHORS COPYING ChangeLog INSTALL NEWS README README.tests TODO TODO_SCHEMAS'
blfspatch=""
patchfiles=""
compress=tzst
##############################################################

source /usr/share/plamobuild_functions.sh

# このスクリプトで使う1文字変数の意味
#
# $W : このスクリプトを動かすカレントディレクトリ
# $S : ソースコードのあるディレクトリ(デフォルト: $W/${src})
# $B : ビルド用ディレクトリ(デフォルト: /tmp/build{,32})
# $P : ビルドしたファイルをインストールするディレクトリ（デフォルト: $W/work)


if [ $# -eq 0 ] ; then
  opt_download=0 ; opt_config=1 ; opt_build=1 ; opt_package=1
else
  opt_download=0 ; opt_config=0 ; opt_build=0 ; opt_package=0
  for i in $@ ; do
    case $i in
    download) opt_download=1 ;;
    config) opt_config=1 ;;
    build) opt_build=1 ;;
    package) opt_package=1 ;;
    esac
  done
fi
if [ $opt_download -eq 1 ] ; then
  download_sources
  if [ ! -f ${blfspatch##*/} ]; then
    wget $blfspatch
  fi
fi

if [ $opt_config -eq 1 ] ; then
  if [ -d $B ] ; then rm -rf $B ; fi
  for i in 2 3
  do
    OPT_CONFIG="$OPT_CONFIG --with-python=/usr/bin/python${i}"
    mkdir -p $B/$i
    cp -a $S/* $B/$i
######################################################################
#  don't copy sources, so need patch in the src dir
######################################################################
    cd $B/$i
    for patch in $patchfiles ; do
      patch -p1 < $W/$patch
    done

    export PKG_CONFIG_PATH=/usr/${libdir}/pkgconfig:/usr/share/pkgconfig
    export LDFLAGS='-Wl,--as-needed' 
    ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var --mandir='${prefix}'/share/man --with-python=/usr/bin/python${i} ${OPT_CONFIG}
    
    if [ $? != 0 ]; then
      echo "configure error. $0 script stop"
      exit 255
    fi
  done
fi
    
if [ $opt_build -eq 1 ] ; then
  for i in 2 3
  do
    cd $B/$i
    export LDFLAGS='-Wl,--as-needed'
    if [ $i -eq 3 ]; then
      export PYTHONHASHSEED=0
    fi
    make -j3
    if [ $? != 0 ]; then
      echo "build error. $0 script stop"
      exit 255
    fi
  done
fi

if [ $opt_package -eq 1 ] ; then
  check_root
  if [ -d $P ] ; then rm -rf $P ; fi ; mkdir -p $P
  for i in 2 3
  do
    echo "Install with python${i}"
    cd $B/$i
    export LDFLAGS='-Wl,--as-needed'
    if [ $i -eq 3 ]; then
      export PYTHONHASHSEED=0
    fi
    make install DESTDIR=$P
  done

################################
#      install tweaks
#  strip binaries, delete locale except ja, compress man, 
#  install docs and patches, compress them and  chown root.root
################################
  install_tweak

#############################
#   convert symlink to null file and 
#   add "ln -sf" command into install/doinst.sh
################################
  convert_links

  cd $P
  /sbin/makepkg ../$pkg.$compress <<EOF
y
1
EOF

fi
